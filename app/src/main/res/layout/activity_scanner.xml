<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/capture_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#88000000">

    <SurfaceView
        android:id="@+id/capture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/scan_mask"
        >

        <ImageView
            android:id="@+id/_back"
            android:layout_width="23dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp30"
            android:onClick="btn"
            android:src="@drawable/s_left"
            android:layout_centerVertical="true"/>

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="扫一扫"
            android:textColor="@color/white"
            android:textSize="@dimen/sp22" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_cancle"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/cancle"
            android:gravity="center"
            android:textColor="#DBD5D5"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/capture_crop_layout"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/scan_mask"
        >

        <RelativeLayout
            android:id="@+id/capture_crop_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/capture_crop_view"
                android:layout_width="206dp"
                android:layout_height="206dp"
                android:background="@drawable/capture"
                android:contentDescription="@string/app_name">

                <ImageView
                    android:id="@+id/capture_scan_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/kakalib_scan_ray"
                    android:contentDescription="@string/app_name"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="53dp"
                android:layout_below="@+id/capture_crop_view"
                android:contentDescription="@string/app_name">

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_marginBottom="0dp"
                    android:layout_width="200dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/block_scan_bcg"
                    android:text="对准车上的二维码"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp14"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


