<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <!--<include-->
        <!--layout="@layout/ui_main_title"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bcg_title_home">

        <LinearLayout
            android:id="@+id/ll_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/mainUI_title_backBtn"
                android:layout_width="23dp"
                android:layout_height="17dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/back_image"/>

        </LinearLayout>

        <TextView
            android:id="@+id/mainUI_title_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp18"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

        <!--<ImageView-->
            <!--android:id="@+id/mainUI_title_rightBtn"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginRight="21dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:src="@drawable/add_dispatch_icon"-->
            <!--android:layout_centerInParent="true"/>-->

        <Button
            android:id="@+id/mainUI_title_rightBtn"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bcg_normal3"
            android:gravity="center"
            android:maxHeight="0dp"
            android:text="确认"
            android:textColor="#333333"
            android:textSize="@dimen/sp16" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/sp18"
            android:textColor="#333333"
            android:text="照片："
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_add_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="41dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_dispatch_icon2"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_below="@id/mainUI_titleLayout">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/border_photo"
            android:scaleType="centerCrop"
            />

        <Button
            android:id="@+id/btn_photo_delete"
            android:layout_width="52dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bcg_normal2"
            android:gravity="center"
            android:maxHeight="0dp"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/sp18"
            android:textColor="#333333"
            android:text="车辆信息："
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_add_car"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="41dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_dispatch_icon2"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_swipe_list" />


    </LinearLayout>



</LinearLayout>
