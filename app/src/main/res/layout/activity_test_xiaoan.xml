<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >

    <include
        layout="@layout/ui_main_title"/>

    <Button
        android:visibility="gone"
        android:id="@+id/button"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:onClick="getStatusClick"
        android:text="状态"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:visibility="gone"
        android:id="@+id/button2"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:onClick="rebootClick"
        android:text="重启"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button" />

    <Button
        android:visibility="gone"
        android:id="@+id/button3"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:onClick="shutdownClick"
        android:text="关机"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:onClick="findcarClick"
        android:text="寻车"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button3" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:onClick="accClick"
        android:text="电门"
        android:textColor="#333333"
        app:layout_constraintBottom_toTopOf="@+id/switch2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <!--android:s="@drawable/switch_button_left"-->

    <Switch
        android:id="@+id/switch2"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="fenceClick"
        android:checked="true"
        android:text="防御"
        android:textColor="#333333"
        app:layout_constraintBottom_toTopOf="@+id/switch3"
        app:layout_constraintEnd_toEndOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="seatClick"
        android:text="鞍座"
        android:textColor="#333333"
        app:layout_constraintBottom_toTopOf="@+id/switch4"
        app:layout_constraintEnd_toEndOf="@+id/switch2"
        app:layout_constraintTop_toBottomOf="@+id/switch2" />

    <Switch
        android:visibility="gone"
        android:id="@+id/switch4"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="wheelClick"
        android:text="后轮"
        android:textColor="#333333"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/switch3"
        app:layout_constraintTop_toBottomOf="@+id/switch3" />



    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:onClick="connectClick"
        android:text="连接"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/imeiTxt" />

    <Button
        android:id="@+id/button6"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:onClick="disconnectClick"
        android:text="断连"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/imeiTxt"
        android:layout_width="180dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center|start"
        android:inputType="number"
        android:text=""
        android:textColor="#333333"
        android:hint="86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusTxt"
        android:layout_width="62dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="未连接"
        android:textColor="#333333"
        app:layout_constraintBaseline_toBaselineOf="@+id/imeiTxt"
        app:layout_constraintStart_toEndOf="@+id/imeiTxt" />

    <Button
        android:id="@+id/scan"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:onClick="scanClick"
        android:text="扫码"

        app:layout_constraintBaseline_toBaselineOf="@+id/statusTxt"
        app:layout_constraintStart_toEndOf="@+id/statusTxt"
        />

    <Button
        android:visibility="gone"
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:text="蓝牙寻车"
        android:onClick="bleFindCar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<Button-->
        <!--android:id="@+id/button8"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:onClick="bleOpenBatBox"-->
        <!--android:text="蓝牙开仓"-->
        <!--app:layout_constraintStart_toStartOf="@+id/button7"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/button7" />-->

</android.support.constraint.ConstraintLayout>
