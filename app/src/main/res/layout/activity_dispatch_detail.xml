<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    >

    <include
      layout="@layout/ui_main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22dp"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:gravity="center_vertical"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp18"
                android:textColor="@color/tx_black"
                android:text=""/>

            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp16"
                android:textColor="#666666"
                android:text=""/>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/sp14"
            android:textColor="@color/tx_black"
            android:text=""/>

        <TextView
            android:id="@+id/item_end_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/sp14"
            android:textColor="@color/tx_black"
            android:text=""/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_below="@id/mainUI_titleLayout">

        <!---->

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/block_dispatch_bcg0"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--app:tabIndicator="@drawable/block_dispatch_bcg"-->
                <!--app:tabIndicatorColor="#F95A64"-->
                <!--app:tabGravity="fill"-->
                <!--app:tabMode="fixed"-->
                <!--app:tabTextAppearance="@style/TabLayoutTextStyle2"-->
                <!--app:tabIndicatorFullWidth="false"-->
                <!---->


                <android.support.design.widget.TabLayout
                    android:id="@+id/tab"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    app:tabIndicatorHeight="0dp"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="#F95A64"
                    app:tabMode="fixed"
                    app:tabMaxWidth="0dp"
                    app:tabSelectedTextColor="#ffffff"
                    app:tabTextAppearance="@style/TabLayoutTextStyle2"
                    app:tabTextColor="#333333"
                    app:tabBackground="@drawable/tabitem"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_2"
            android:background="#ffffff"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



    </RelativeLayout>



</LinearLayout>