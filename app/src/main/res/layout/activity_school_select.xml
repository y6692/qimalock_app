<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/ui_main_title"/>


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        >

        <com.qimalocl.manage.core.widget.ClearEditText
            android:id="@+id/et_school"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_school_select_edit"
            android:drawableLeft="@drawable/query_icon"
            android:drawablePadding="8dp"
            android:paddingLeft="14dp"
            android:hint="搜索学校"
            android:inputType="text"
            android:textSize="@dimen/sp16"
            android:gravity="center_vertical"
            android:textColorHint="#B2B2B2"
            android:textColor="@color/tx_black"/>

        <!--<Button-->
            <!--android:id="@+id/btn_click_one"-->
            <!--android:layout_width="83dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/block_bcg9"-->
            <!--android:text="查询"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/sp15"-->
            <!--android:gravity="center"-->
            <!--/>-->

    </LinearLayout>


    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        layout="@layout/layout_swipe_list" />

    <Button
        android:id="@+id/schoolSelectUI_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="43dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/btn_bcg_normal"
        android:gravity="center"
        android:maxHeight="0dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:stateListAnimator="@null"
        android:textSize="@dimen/sp18" />

</LinearLayout>
