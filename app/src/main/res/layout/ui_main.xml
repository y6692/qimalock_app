<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_main"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainUI_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/mainUI_leftBtn"
            android:layout_width="@dimen/dp60"
            android:layout_height="match_parent"
            android:src="@drawable/san_icon"
            android:scaleType="centerInside"
            android:padding="@dimen/dp5"/>

        <TextView
            android:id="@+id/mainUI_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="7MA出行"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"/>

        <TextView
            android:id="@+id/mainUI_rightBtn"
            android:layout_width="@dimen/dp90"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white"
            android:text="登录"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_backgroud"
        android:layout_below="@id/mainUI_titleLayout">

        <com.amap.api.maps.MapView
            android:id="@+id/mainUI_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </com.amap.api.maps.MapView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/mainUI_scanCode_lookRecordBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/btn_bcg"
                android:layout_margin="@dimen/dp20"
                android:gravity="center"
                android:text="查看车辆骑行记录"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/mainUI_scanCode_changeKeyBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/btn_bcg"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:gravity="center"
                android:text="手动修改锁的密钥"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainUI_storageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp45"
            android:gravity="center"
            android:background="@color/white"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10">

            <ImageView
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:src="@drawable/storage_icon"
                android:scaleType="centerInside"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:text="扫码入库"
                android:paddingTop="@dimen/dp5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainUI_lockLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/mainUI_storageLayout"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp15"
            android:paddingBottom="@dimen/dp15"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp15">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:src="@drawable/lock_icon"
                android:scaleType="centerInside"
                android:padding="@dimen/dp10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锁定"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/sp14"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/mainUI_scanCode_lock"
            android:layout_width="120dp"
            android:layout_height="@dimen/dp60"
            android:background="@null"
            android:src="@drawable/scan_code_lock"
            android:scaleType="centerInside"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:id="@+id/mainUI_scanCode_endLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp80">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:src="@drawable/end_icon"
                android:scaleType="centerInside"
                android:padding="@dimen/dp10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束用车"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                android:textColor="@color/tx_black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainUI_lookLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp45"
            android:gravity="center"
            android:background="@color/white"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5">
            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:src="@drawable/address_adv"
                android:scaleType="centerInside"
                android:background="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:text="查看车辆位置"
                android:paddingTop="@dimen/dp5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainUI_unLockLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/mainUI_lookLocationBtn"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp20"
            android:paddingBottom="@dimen/dp25"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:src="@drawable/unlock_icon"
                android:scaleType="centerInside"
                android:padding="@dimen/dp10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解锁"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/sp14"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>