<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/block_dialog_bcg"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#333333"
            android:text="维修部位"
            android:textSize="18sp"
            />


    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >


        <TextView
            style="@style/DialogText"
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:singleLine="false"
            android:text="2222"
            android:textColor="#666666"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp10">

        <com.qimalocl.manage.core.widget.ClearEditText
            android:id="@+id/pop_reasonEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/shape_change_phone"
            android:drawableRight="@drawable/delete_selector"
            android:gravity="center_vertical"
            android:hint="请输入维修部位"
            android:lineSpacingExtra="@dimen/dp5"
            android:paddingBottom="0dp"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="0dp"
            android:textColor="@color/tx_black"
            android:textColorHint="#c0c0c0"
            android:textSize="@dimen/sp14" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_scan_positiveButton2"
        android:layout_width="315dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/btn_bcg_cancel2"
            android:text="取消"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:stateListAnimator="@null"
            />
        <Button
            android:id="@+id/positiveButton"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/btn_bcg_confirm2"
            android:text="确定"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:stateListAnimator="@null"
            />

    </LinearLayout>



</LinearLayout>


