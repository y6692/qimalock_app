<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/mainUI_title_mainLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/ll_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/mainUI_title_backBtn"
                android:layout_width="11.5dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/back_image"/>

            <TextView
                android:visibility="gone"
                android:layout_marginLeft="-10dp"
                android:id="@+id/tv_left"
                android:textSize="@dimen/sp16"
                android:text="返回"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/mainUI_title_backBtn"-->
            <!--android:layout_width="@dimen/dp40"-->
            <!--android:layout_height="@dimen/dp40"-->
            <!--android:layout_marginLeft="@dimen/dp30"-->
            <!--android:src="@drawable/back_image"-->
            <!--android:padding="8dp"-->
            <!--android:layout_alignParentLeft="true"/>-->

        <TextView
            android:id="@+id/mainUI_title_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#EA5359"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/mainUI_title_rightBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp30"/>
    </RelativeLayout>


</LinearLayout>
