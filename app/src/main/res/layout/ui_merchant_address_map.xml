<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <!--<include-->
        <!--layout="@layout/ui_main_title"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/bcg_title_home"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/mainUI_title_backBtn"
            android:layout_width="23dp"
            android:layout_height="17dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/back_image"/>

        <com.qimalocl.manage.core.widget.ClearEditText
            android:id="@+id/et_name"
            android:layout_width="216dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="12dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_feedback_edit"
            android:hint="请输入车编号"
            android:textColor="@color/tx_black"
            android:textSize="@dimen/sp16"
            android:paddingLeft="35dp"
            android:textColorHint="#999"/>

        <TextView
            android:id="@+id/searchBtn"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/et_name"
            android:background="@drawable/shape_search_button"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="搜索"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_backgroud"
        android:layout_below="@id/mainUI_titleLayout">

        <com.amap.api.maps.MapView
            android:id="@+id/ui_merchantAddress_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.amap.api.maps.MapView>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="请输入车编号"
                />

            <TextView

                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/et_name"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="搜索"
                android:textSize="18sp"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@color/red"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/query"
            android:textColor="@color/red"
            android:text=""
            android:textSize="18sp"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            />

    </RelativeLayout>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical"-->
        <!--android:background="@color/ui_backgroud">-->
    <!--</LinearLayout>-->



</LinearLayout>
