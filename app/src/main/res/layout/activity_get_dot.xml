<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainUI_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@drawable/bcg_title_home"
        >


        <LinearLayout
            android:id="@+id/ll_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/mainUI_title_backBtn"
                android:layout_width="23dp"
                android:layout_height="17dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/back_image"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp18"
            android:textColor="@color/white"
            android:text="电子围栏"
            android:gravity="center"/>


        <LinearLayout
            android:id="@+id/ll_rightBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="21dp"
                android:src="@drawable/title_add_icon"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_backgroud"
        android:layout_below="@id/mainUI_titleLayout">

        <com.amap.api.maps.MapView
            android:id="@+id/mainUI_map2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </com.amap.api.maps.MapView>

        <LinearLayout
            android:id="@+id/mainUI_msg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/btn_bcg_mission"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/ib2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/msg"
                android:background="#00000000"
                />
            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/mainUI_scanCode_lookRecordBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/btn_bcg"
                android:layout_margin="@dimen/dp20"
                android:gravity="center"
                android:text="查看车辆骑行记录"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"
                android:visibility="gone"/>
            <Button
                android:id="@+id/mainUI_scanCode_changeKeyBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/btn_bcg"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:gravity="center"
                android:text="手动修改锁的密钥"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainUI_storageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp45"
            android:gravity="center"
            android:background="@color/white"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:src="@drawable/storage_icon"
                android:scaleType="centerInside"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:text="扫码入库"
                android:paddingTop="@dimen/dp5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainUI_lockLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/mainUI_storageLayout"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp15"
            android:paddingBottom="@dimen/dp15"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp15"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:src="@drawable/recycle"
                android:scaleType="centerInside"
                android:padding="@dimen/dp10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回收"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/sp14"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:paddingLeft="@dimen/dp30"
            android:paddingRight="@dimen/dp30"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <EditText
                        android:id="@+id/getDot_et_dot_name"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:paddingLeft="6dp"
                        android:background="@drawable/shape_et_name"
                        android:hint="请输入电子围栏名称"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <!--<RelativeLayout-->
                    <!--android:id="@+id/ll_bill"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_marginLeft="12dp"-->
                    <!--android:layout_marginRight="30dp"-->

                    <!--&gt;-->
                <!--</RelativeLayout>-->

                <LinearLayout
                    android:id="@+id/ll_school_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/getDot_tv_school_name"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/shape_et_name"
                        android:paddingLeft="6dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textSize="14dp"
                        android:hint="请输入名称"
                        android:textColor="@color/tx_black"/>

                    <!--<EditText-->
                        <!--android:id="@+id/getDot_et_school_name"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="32dp"-->
                        <!--android:paddingLeft="6dp"-->
                        <!--android:background="@drawable/shape_et_name"-->
                        <!--android:hint="请输入名称"-->
                        <!--android:textSize="14sp"-->
                        <!--/>-->

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp40"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:id="@+id/getDot_cancelLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal"
                        android:background="@drawable/btn_bcg_scan4"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="36dp"
                            android:text="取消"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp40"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:id="@+id/getDot_submitLayout"
                        android:layout_width="100dp"
                        android:layout_height="36dp"
                        android:orientation="horizontal"
                        android:background="@drawable/btn_bcg_scan5"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        >
                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保存"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/mainUI_myLocationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="106dp"
            android:layout_marginLeft="@dimen/dp30"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/mainUI_myLocation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:src="@drawable/location_icon"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/sp16"
                android:textColor="@color/tx_black"
                android:text="定位"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/getDot_confirmLayout"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginBottom="54dp"
            android:orientation="horizontal"
            android:background="@drawable/btn_bcg_scan3"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定点"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"
                />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>